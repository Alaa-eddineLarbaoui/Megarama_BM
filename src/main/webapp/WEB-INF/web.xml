<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

    <servlet>
        <servlet-name>ShowFilms</servlet-name>
        <servlet-class>com.octest.servlets.ShowFilms</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowFilms</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.octest.servlets.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddFilm</servlet-name>
        <servlet-class>com.octest.servlets.AddFilm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFilm</servlet-name>
        <url-pattern>/Add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>MovieDetails</servlet-name>
        <servlet-class>com.octest.servlets.MovieDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieDetails</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
</web-app>